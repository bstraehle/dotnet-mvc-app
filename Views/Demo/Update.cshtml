@model DemoApp.Models.Demo

@{
    ViewData["Title"] = "Update";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
<div class="col-md-4">
<form asp-action="UpdateObject">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input readonly asp-for="Id" class="form-control margin-bottom" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input required asp-for="Name" class="form-control margin-bottom" maxlength="50" />
    </div>
    <input type="submit" value="Update" class="btn btn-primary margin-bottom" />
</form>
</div>
</div>

<div>
<a asp-action="List">Back to List</a>
</div>
